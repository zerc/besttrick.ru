<%= set_title(trick.get('title')) %>

<div class="trick__users">
<% if (users.length > 0) { %>
    <% _.map(users, function (row, i) {%>
        <div class="trick__user<% if (i === 0) { %> trick__user_king<% } %>">
            <span><%= row.cones %></span>
            <img src="<%= row.user.photo %>" class="trick__user__photo">
            <a href="#profile-<%= row.user._id %>"><%= row.user.nick %></a>
        </div>
    <%}) %>
<% } else { %>
    <div class="trick__user no_one">
        Еще никто не делает этот трюк!
    </div>
<% } %>
</div>
<div class="trick__info">
    <% _.map(trick.get('videos'), function (video) { %>
        <iframe width="315" height="190" src="<%= video %>" frameborder="0" allowfullscreen></iframe>    
    <% }); %>

    <%= trick.get('descr') %>
</div>
<br class="clear">
